<div metal:use-macro="load: ../shared/_layout.pt">
    <div metal:fill-slot="content">

        <div class="admin-block padded redirects">
            <h1>CMS Pages</h1>
            <a href="/admin"
               class="btn btn-info"
            >&#171; Back to admin home</a><br>
            <br>
            <ul>
                <li>
                    <a href="/admin/add_page">Add new CMS page</a>
                </li>
                <li tal:repeat="p pages">
                    <a href="/${p.url}" class="btn btn-primary btn-sm" target="_blank">view</a>
                    <a href="/admin/edit_page/${p.id}" class="btn btn-danger btn-sm">edit</a>

                    <!--?                    <span>${r.created_date.date().isoformat()}</span>-->
                    <strong>${p.title}</strong>
                    <span>${p.url}</span>
                </li>
            </ul>


        </div>

    </div>

    <div metal:fill-slot="additional-css">
        <link href="/static/css/admin.css" rel="stylesheet">
    </div>

</div>
