<div metal:use-macro="load: ../shared/_layout.pt">
    <div metal:fill-slot="content">

        <div class="admin-block padded redirects">
            <h1>CMS Redirects</h1>
            <a href="/admin"
               class="btn btn-info"
            >&#171; Back to admin home</a><br>
            <br>
            <ul>
                <li>
                    <a href="/admin/add_redirect">Add new redirect</a>
                </li>
                <li tal:repeat="r redirects">
                    <a href="/${r.short_url}" class="btn btn-primary btn-sm" target="_blank">test</a>
                    <a href="/admin/edit_redirect/${r.id}" class="btn btn-danger btn-sm">edit</a>

                    <!--?                    <span>${r.created_date.date().isoformat()}</span>-->
                    <strong>${r.name}</strong>
                    <span>${r.short_url}</span>
                </li>
            </ul>


        </div>

    </div>

    <div metal:fill-slot="additional-css">
        <link href="/static/css/admin.css" rel="stylesheet">
    </div>

</div>
